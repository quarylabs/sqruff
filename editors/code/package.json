{
  "name": "sqruff",
  "displayName": "sqruff",
  "description": "sqruff is a SQL linter and formatter.",
  "repository": {
    "type": "git",
    "url": "https://github.com/quarylabs/sqruff.git"
  },
  "publisher": "Quary",
  "version": "0.34.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "contributes": {
    "configuration": {
      "title": "sqruff",
      "properties": {
        "sqruff.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the sqruff executable. If empty, the extension tries the bundled binary and then PATH."
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./dist/native.cjs",
  "browser": "./dist/browser.js",
  "scripts": {
    "build": "pnpm run build:wasm_lsp-release && pnpm run check-types && node esbuild.js --production",
    "compile": "pnpm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package --no-dependencies",
    "build:wasm_lsp": "env-var wasm-pack build --dev --target web ../../crates/lsp --out-dir ../../editors/code/_wasm",
    "build:wasm_lsp-release": "env-var wasm-pack build --release --target web ../../crates/lsp --out-dir ../../editors/code/_wasm",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "test": "vscode-test",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ../../crates/lib-dialects/test/fixtures/dialects/ansi"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@rauschma/env-var": "^1.0.1",
    "@types/node": "~25.1.0",
    "@types/vscode": "1.96.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.78",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "catalog:",
    "npm-run-all": "^4.1.5",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
