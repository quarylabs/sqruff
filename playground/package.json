{
  "name": "playground",
  "type": "module",
  "scripts": {
    "build:wasm": "cross-env RUSTFLAGS=\"-C opt-level=z\" wasm-pack build ../crates/lib-wasm --target web --out-dir ../../playground/src/pkg",
    "build": "pnpm run build:wasm && vite build",
    "dev": "vite",
    "dev:wasm": "wasm-pack build ../crates/lib-wasm --dev --target web --out-dir ../../playground/src/pkg",
    "lint": "eslint src --max-warnings 0",
    "test": "playwright test"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@playwright/test": "^1.55.0",
    "classnames": "^2.5.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fflate": "^0.8.2",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.53.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-resizable-panels": "^3.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "autoprefixer": "^10.4.21",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.7"
  }
}
